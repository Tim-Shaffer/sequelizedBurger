  {{!-- second row displays the burgers - eaten or not --}}
  <div class="row">

    <div class="col-2"></div>

    <div class="col-4" id="to-be-eaten">

      <h4>Burgers To Eat:</h4>

      <br>
    
      <ul>

        {{#each burgers}}

          {{#unless devoured}}

            {{> burgers/burger-block }}
            
          {{/unless}}

        {{/each}}

      </ul>

    </div>
    {{!-- end of to-be-eaten col div --}}
    
    <div class="col-4" id="eaten">

      <h4>Burgers Already Eaten:</h4>

      <br>

      <ul>

        {{#each burgers}}

          {{#if devoured}}

            {{> burgers/burger-block }}

          {{/if}}

        {{/each}}

      </ul>
    
    </div>
    {{!-- end of eaten col div --}}

    <div class="col-2"></div>

  </div>
  {{!-- end of burger row div --}}

  {{!-- third row displays the form to add a new burger to be eaten --}}
  <div class="row">

    <div class="col"></div>
    
    <div calss="col">

      <form class="create-form">

        <div class="form-group">

							<select class="custom-select" id="customer"></select>

				</div>

        <div class="form-group">

          <input type="text" id="burger" name="burger_name">

        </div>

        <p id="instructions"> Enter a burger that you would like to eat and Click the "Submit" button </p>
        
        <br>

        <div id="burger-button">
          
          <button type="submit" class="btn btn-lg btn-success button-space">Submit</button>

        </div>

      </form>

    </div>
    {{!-- end of form col div --}}
    
    <div class="col"></div>

  </div>
  {{!-- end of form row div --}}

  {{!-- fourth row Navigation Buttons --}}
  <div class="row">

    <div class="col-2"></div>

    <div class="col-4" id="mainButton">

      <a class="btn btn-light" href="/">Go to Main Menu</a>

    </div>
    {{!-- end of mainButton col div --}}
    
    <div class="col-4" id="addCustomerBurger">

      <a class="btn btn-light" href="/customer">Manage Customers</a>

    </div>
    {{!-- end of addCustomer col div --}}

    <div class="col-2"></div>

  </div>
  {{!-- end of row div --}}

</div>
{{!-- end of the container div --}}

